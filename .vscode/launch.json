    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/src/cli.ts",
            "args": [
                "/Volumes/Work/new_vendors/desktop.blocks/v-key-value",
                "-f"
            ],
            "showAsyncStacks": true,
            "outFiles": [
                "${workspaceRoot}/dist/*"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 5858
        }
    ]
}